<% include ./partials/header %>
<div class="ui container" style="margin-top:70px;width:50%;">
  <h3>Edit : <%=blog.name%></h3>
    <form class="ui form" action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
      <div class="field">
        <label>Blog Title:</label>
        <input type="text" name="name" value="<%=blog.name%>" >
      </div>
      <div class="field">
        <label>Blog image:</label>
        <input type="text" name="image" value="<%=blog.image%>">
      </div>
      <div class="field">
          <label>Blog Description:</label>
         <textarea name="bodypost"  cols="30" rows="10"><%=blog.body%></textarea>
        </div>
      
      <button class="ui button" type="submit">Submit</button>
    </form>
  </div>
<% include ./partials/header %>